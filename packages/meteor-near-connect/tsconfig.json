{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "ES2022.Error"
    ],
    "target": "ES2020",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": false,
    "declaration": true,
    "sourceRoot": "./src",
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": false,
    "module": "ES2022",
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@meteorwallet/sdk": [
        "../meteor-sdk-v1/src"
      ]
    }
  },
  "include": [
    "vite-env.d.ts",
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../../node_modules"
  ]
}