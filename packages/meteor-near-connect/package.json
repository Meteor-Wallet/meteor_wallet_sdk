  },
  "dependencies": {
    "@meteorwallet/sdk": "workspace:*",
    "@near-js/utils": "2.2.5",
    "@hot-labs/near-connect": "0.8.2"
  },
  "devDependencies": {
    "@near-js/types": "2.2.5",
    "vite": "7.3.0",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "private": true
}
