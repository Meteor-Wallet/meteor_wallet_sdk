{
  "name": "meteor-near-connect",
  "version": "0.0.1",
  "type": "module",
  "description": "Meteor NEAR Connect SDK",
  "scripts": {
    "build": "vite build",
    "build-watch": "vite build --watch",
    "build-dev-watch": "NODE_ENV=development vite build --watch",
    "dev": "vite dev --config vite.dev.config.ts",
    "type-check": "tsc --noEmit",
