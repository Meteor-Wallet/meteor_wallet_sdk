{
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "ES2022.Error"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "composite": true,
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceRoot": "./src",
    "esModuleInterop": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@meteorwallet/sdk": ["../meteor-sdk-v1/src/index.ts"]
    }
  },
  "include": ["src"]
}
