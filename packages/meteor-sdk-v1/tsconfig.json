{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "ES2022.Error"],
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ES2022",
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "../../node_modules"]
}
