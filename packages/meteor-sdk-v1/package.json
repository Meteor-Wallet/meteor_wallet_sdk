{
  "name": "@meteorwallet/sdk",
  "version": "2.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "./dist",
    "./src",
    "./package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "docs:build": "rimraf ./docs && typedoc",
    "docs:build_serve": "npm run docs:build && cd ./docs && serve",
    "docs:deploy": "CLOUDFLARE_ACCOUNT_ID=06f0b83df3d52d4d6ddc6512618dca88 npx wrangler pages publish ./docs",
    "prettier": "prettier --write  src/**/*.{js,ts}",
    "type-check": "tsc --noEmit",
    "type-check-watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@lit/task": "1.0.3",
    "lit": "3.3.2",
    "@scure/base": "2.0.0",
    "@noble/hashes": "2.0.1",
    "@meteorwallet/errors": "1.28.0-0",
    "@meteorwallet/utils": "1.28.0-0",
    "@near-js/accounts": "2.2.5",
    "@near-js/crypto": "2.2.5",
    "@near-js/transactions": "2.2.5",
    "@near-js/keystores": "2.2.5",
    "@near-js/keystores-browser": "2.2.5",
    "@near-js/providers": "2.2.5",
    "@near-js/signers": "^2.2.5",
    "@near-js/types": "2.2.5",
    "fast-deep-equal": "3.1.3",
    "borsh": "1.0.0",
    "nanoid": "5.1.5",
    "query-string": "^7.1.3",
    "qr-code-styling": "1.9.2",
    "zod": "^4.0.17"
  },
  "peerDependencies": {
    "near-api-js": "^6.0.0"
  },
  "devDependencies": {
    "near-api-js": "6.2.5",
    "typedoc": "0.28.10",
    "tsdown": "0.14.1"
  }
}
